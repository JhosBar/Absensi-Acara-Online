<div class="modal fade" id="Admin_ModalEdit" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <span class="fs-2" style="font-weight:bold;">Add Admin</span>
                <!--begin::Close-->
                <div>
                    <button type="button" class="btn btn-sm btn-light-primary" onclick="SubmitEditModal()">Submit</button>
                    <button type="button" class="btn btn-sm btn-light fw-bold" onclick="CloseModal()">Close</button>
                </div>
            </div>

            <div class="modal-body py-lg-1 px-lg-10">
                <div class="py-lg-5">
                    <!--begin::Body-->
                    <div class="d-flex flex-column flex-lg-row-fluid" enctype="multipart/form-data">

                        <div class="tab-content" id="myTabContent">
                            <form id="FormAdminEdit">
                                <input type="hidden" id="AdminIdEdit" name="Id" />
                               @*  <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Username</label>
                                    <input id="AdminUsername_Edit" name="Username" class="form-control mb-2" autocomplete="off" />
                                </div> *@

                                <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Username</label>
                                    <div class="mb-2">
                                        <span id="AdminUsername_Edit" name="Username" class="ms-2 fs-4"></span>
                                    </div>
                                </div>

                                <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Email</label>
                                    <input type="email" id="AdminEmail_Edit" name="Email" class="form-control mb-2" autocomplete="off" />
                                </div>

                                <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Role</label>
                                    <select asp-items="@ViewBag.RoleList" id="AdminRole_Edit" name="RoleId" class="form-select" aria-label=".form-select-sm example">
                                        <option value="" selected>Select Role</option>
                                    </select>
                                </div>

                                <div class="form-check form-switch mb-5 ms-1">
                                    <label class="form-label ms-2 fs-6 mb-1">Status</label>
                                    <input id="Status_Edit" name="Status" class="form-check-input" type="checkbox" checked>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

            <!--end::Modal content-->
        </div>
        <!--end::Modal dialog-->
    </div>
</div>