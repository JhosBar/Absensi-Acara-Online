<!--Bank Statement Import Modal - File -->
<div class="modal fade" id="Admin_ModalCreate" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <span class="fs-2" style="font-weight:bold;">Add Admin</span>
                <!--begin::Close-->
                <div>
                    <button type="button" class="btn btn-sm btn-light-primary" onclick="SubmitCreateModal()">Submit</button>
                    <button type="button" class="btn btn-sm btn-light fw-bold" onclick="CloseModal()">Close</button>
                </div>
            </div>

            <div class="modal-body py-lg-1 px-lg-10">
                <div class="py-lg-5">
                    <!--begin::Body-->
                    <div class="d-flex flex-column flex-lg-row-fluid" enctype="multipart/form-data">

                        <div class="tab-content" id="myTabContent">
                            <form id="FormAdminCreate">
                                <div class="mb-5">
                                    <label class="required form-label ms-2 fs-6 mb-1">Username</label>
                                    <input id="AdminUsername_Create" name="Username" class="form-control mb-2" autocomplete="off" />
                                </div>

                                <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Email</label>
                                    <input type="email" id="AdminEmail_Create" name="Email" class="form-control mb-2" autocomplete="off" />
                                </div>

                                <div class="mb-1">
                                    <label class="form-label ms-2 fs-6 mb-1">Password</label>
                                    <input id="AdminPassword_Create" name="Password" class="form-control mb-2" autocomplete="off" />
                                </div>
                                <span class="fs-7 ms-2">*Use 3 or more characters with a mix of letters & numbers</span>

                                <div class="my-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Confirm Password</label>
                                    <input id="AdminCPassword_Create" name="PasswordSalt" class="form-control mb-2" autocomplete="off" />
                                </div>

                                <div class="mb-5">
                                    <label class="form-label ms-2 fs-6 mb-1">Select Role</label>
                                    <select asp-items="@ViewBag.RoleList" name="RoleId" class="form-select" aria-label=".form-select-sm example">
                                        <option value="" selected>Select Role</option>
                                    </select>
                                </div>
                            </form>
                        </div>

                    </div>
                </div>
            </div>

            <!--end::Modal content-->
        </div>
        <!--end::Modal dialog-->
    </div>
</div>