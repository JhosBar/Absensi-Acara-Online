                                </li>
                                <li class="menu-item">
                                    <a href="" class="menu-link px-2">Purchase</a>
                                </li>
                            </ul>
                            <!--end::Menu-->
                        </div>
                        <!--end::Footer-->

                    </div>
                    <!--end:::Main-->
                </div>
                <!--end::Wrapper container-->
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/Modal/Modal.cshtml")

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/js/CountUp.js"></script> *@
