                        @RenderBody()

                            </div>
                            <!--end::Content-->
                        </div>
                        <!--end::Content wrapper-->

                        <!--begin::Footer-->
                        <div id="kt_app_footer" class="app-footer d-flex flex-column flex-md-row align-items-end flex-center flex-md-stack py-2 py-lg-4">
                            <!--begin::Copyright-->
                            <div class="text-dark order-2 order-md-1">
